# name of the character
window=Pecueca - Dofus
# log level [debug, event, info, warn, warning, error, eureka]
log_level=debug
debug_img=true
# instruction file 
procedure_folder=./procedures
# procedure_name=mercadillos/mecadillo_recursos_bonta
; procedure_name=mercadillos/mercadillo_recursos_todas_las_categorias
; procedure_name=mercadillos/mercadillo_runas_todas_las_categorias
; procedure_name=mercadillos/mercadillo_lenadores_todas_las_categorias
; procedure_name=mercadillos/mercadillo_mineros_todas_las_categorias
; procedure_name=mercadillos/mercadillo_campesinos_todas_las_categorias
; procedure_name=mercadillos/mercadillo_pescadores_todas_las_categorias
procedure_name=oficios/lenador/lenador_activo
# output folder
output_folder=./data/output
# temporal folder
temp_dir=./temp
# language configutation [spa, eng, fra] check ./resources/languages folder
languages_path=./resources/languages
language=spa+eng
user_dpi=180
classify_min_confidence=80
# delete the temporal images [true,false]
delete_temp=false
# used to binarize images
adaptative_binarization=false
binarize_for_ocr=true
binary_image_threshold=30.0
binarization_blockSize=31
binarization_c=0
# comparison
diff_comparison_humbral=0.9999
# white rectangles when changing zones
white_diff_thresh                        = 30   # gray delta
diff_dilate_ksize                        = 5    # median‚Äêblur kernel (must be odd)
morph_size                               = 7    # morphological close/open kernel (odd)
max_arrow_area                           = 8000 # drop large arrow blob
min_arrow_area                           = 500  # drop large arrow blob
change_zone_white_square_fuse_comparison = 50   # fuzz in px for extremes
# Capture actions proceess
capture_dump_file=./procedures/oficios/lenador/capture.proc
capture_dump_format=call_proc       oficios/interactuar_con_recurso     $x      $y      10          10          $1